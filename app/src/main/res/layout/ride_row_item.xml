<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:strokeWidth="2dp"
    app:strokeColor="@color/black"
    android:layout_marginHorizontal="16dp"
    app:cardUseCompatPadding="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?backgroundColor"
        >

        <TextView
            android:id="@+id/username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?textFillColor"
            android:text="Username"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            />

        <TextView
            android:id="@+id/availability_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="Available"
            android:textColor="?colorPrimary"
            app:layout_constraintTop_toTopOf="@id/username_tv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"
            />

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$XX.XX"
            android:textColor="?textFillColor"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/availability_tv"
            app:layout_constraintEnd_toEndOf="@id/availability_tv"
            />

        <TextView
            android:id="@+id/start_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xx Street Street, State Zip Code ->"
            android:textColor="?textFillColor"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@id/username_tv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            />

        <TextView
            android:id="@+id/destination_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="xx Street Street, State Zip Code"
            android:textColor="?textFillColor"
            android:textSize="14sp"
            android:background="@drawable/rounded_corner"
            app:layout_constraintTop_toBottomOf="@id/start_location_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginVertical="6dp"
            android:padding="6dp"
            />

        <TextView
            android:id="@+id/leaving_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leaving: XX:XX"
            android:textSize="14sp"
            android:textColor="#8B9EB0"
            app:layout_constraintTop_toBottomOf="@id/destination_tv"
            app:layout_constraintStart_toStartOf="@id/start_location_tv"
            android:layout_marginVertical="6dp"
            android:paddingBottom="12dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
